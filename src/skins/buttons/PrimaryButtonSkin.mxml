<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="up" />
    </s:states>

    <s:Group>

        <s:Rect width="100%"
                height="100%"
                radiusX="3"
                radiusY="3">
            <s:fill>
                <s:SolidColor id="color"
                              color="{Color.primary}"
                              alpha.normal="1"
                              alpha.disabled=".5" />
            </s:fill>
        </s:Rect>

        <s:Rect width="100%"
                height="100%"
                radiusX="3"
                radiusY="3">
            <s:fill>
                <s:SolidColor color="0x000000"
                              alpha.normal="0"
                              alpha.disabled="0"
                              alpha.up="0"
                              alpha.over=".1"
                              alpha.down=".3" />
            </s:fill>
        </s:Rect>

        <s:HGroup padding="5"
                  paddingLeft="10"
                  paddingRight="10">
            <s:HGroup verticalAlign="middle">
                <s:Label id="labelDisplay"
                         styleName="primary" />
            </s:HGroup>
        </s:HGroup>

    </s:Group>

    <fx:Script><![CDATA[
        import global.Color;
        ]]></fx:Script>
</s:SparkButtonSkin>